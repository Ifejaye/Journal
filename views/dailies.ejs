<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %>
<body>
    <%- include('../partials/header') %>

    <main class="container">
        <!-- Responsive grid for posts -->
        <div class="row row-cols-1 row-cols-md-2 g-4">
            <% posts.forEach((post) => { %>
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <strong class="d-inline-block mb-2 text-primary"><%= post.contentType %></strong>
                            <h3 class="card-title">Featured post</h3>
                            <div class="mb-1 text-muted">
                                <%= post.displayedDate.month %> <%= post.displayedDate.day %>, <%= post.displayedDate.time %>
                            </div>
                            <p class="card-text"><%= post.content %></p>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </main>
      
    <script></script>
</body>
</html>
